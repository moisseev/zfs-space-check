[PerlCritic]
select = **/*.{pl,pm,t}
select = zfs-space-check
select = zfs-space-check.conf.sample

[PerlTidy]
select = **/*.{pl,pm,t}
select = zfs-space-check
select = zfs-space-check.conf.sample
argv = -l=120

[PodChecker]
select = **/*.{pl,pm,pod}
select = zfs-space-check

;[PodSpell]
;select = **/*.{pl,pm,pod}
;select = zfs-space-check
;argv = aspell --lang=en list

[PodTidy]
select = **/*.{pl,pm,pod}
select = zfs-space-check

[Test::Vars]
select = **/*.{pl,pm,t}
select = zfs-space-check
select = zfs-space-check.conf.sample
